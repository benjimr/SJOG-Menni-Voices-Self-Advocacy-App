<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ben.selfadvocacy.Register">

    <com.ben.selfadvocacy.EnhancedTextView
        android:id="@+id/registerText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="casual"
        android:text="@string/register"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="36sp"
        android:textStyle="bold" />

    <com.ben.selfadvocacy.EnhancedEditText
        android:id="@+id/nameField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/registerText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:ems="10"
        android:hint="@string/username"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <com.ben.selfadvocacy.EnhancedTextView
        android:id="@+id/statusMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_below="@+id/nameField"/>

    <GridLayout
        android:id="@+id/passwordGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:columnCount="3"
        android:rowCount="3">

        <ImageButton
            android:id="@+id/padOne"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="padClicked"
            android:scaleType="fitCenter"
            android:tag="1"
            app:srcCompat="@drawable/one" />

        <ImageButton
            android:id="@+id/padTwo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="padClicked"
            android:scaleType="fitCenter"
            android:tag="2"
            app:srcCompat="@drawable/two" />

        <ImageButton
            android:id="@+id/padThree"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="padClicked"
            android:scaleType="fitCenter"
            android:tag="3"
            app:srcCompat="@drawable/three" />

        <ImageButton
            android:id="@+id/padFour"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="padClicked"
            android:scaleType="fitCenter"
            android:tag="4"
            app:srcCompat="@drawable/four" />

        <ImageButton
            android:id="@+id/padFive"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="padClicked"
            android:scaleType="fitCenter"
            android:tag="5"
            app:srcCompat="@drawable/five" />

        <ImageButton
            android:id="@+id/padSix"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="padClicked"
            android:scaleType="fitCenter"
            android:tag="6"
            app:srcCompat="@drawable/six" />

        <ImageButton
            android:id="@+id/padSeven"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="padClicked"
            android:scaleType="fitCenter"
            android:tag="7"
            app:srcCompat="@drawable/seven" />

        <ImageButton
            android:id="@+id/padEight"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="padClicked"
            android:scaleType="fitCenter"
            android:tag="8"
            app:srcCompat="@drawable/eight" />

        <ImageButton
            android:id="@+id/padNine"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="padClicked"
            android:scaleType="fitCenter"
            android:tag="9"
            app:srcCompat="@drawable/nine" />

    </GridLayout>

</RelativeLayout>
