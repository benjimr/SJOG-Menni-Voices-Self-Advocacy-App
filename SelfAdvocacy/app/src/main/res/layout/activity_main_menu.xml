<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:padding="20dp"
    tools:context="com.ben.selfadvocacy.MainMenu">

    <com.ben.selfadvocacy.EnhancedTextView
        android:id="@+id/mainMenuText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/main_menu"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="32sp"
        android:textStyle="bold" />

    <com.ben.selfadvocacy.EnhancedTextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mainMenuText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="@string/welcome_user"
        android:textColor="@android:color/black"
        android:textSize="28sp" />

    <GridLayout
        android:id="@+id/gridLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:columnCount="3"
        android:rowCount="3">


        <com.ben.selfadvocacy.EnhancedImageButton
            android:id="@+id/HumanRights"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="0"
            android:layout_row="0"
            android:adjustViewBounds="true"
            android:background="@color/colorPrimary"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:tag="Human Rights"
            app:srcCompat="@drawable/rights" />

        <com.ben.selfadvocacy.EnhancedImageButton
            android:id="@+id/padding1"

            android:layout_width="70dp"
            android:layout_height="70dp"
            android:visibility="invisible" />

        <com.ben.selfadvocacy.EnhancedImageButton
            android:id="@+id/Videos"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="2"
            android:layout_row="0"
            android:adjustViewBounds="true"
            android:background="@color/colorPrimary"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:tag="Meeting Minutes"
            app:srcCompat="@drawable/videos" />

        <com.ben.selfadvocacy.EnhancedImageButton
            android:id="@+id/padding2"
            android:layout_width="125dp"
            android:layout_height="70dp"
            android:layout_column="0"
            android:layout_row="1"
            android:visibility="invisible" />

        <com.ben.selfadvocacy.EnhancedImageButton
            android:id="@+id/profileButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="0"
            android:layout_row="2"
            android:adjustViewBounds="true"
            android:background="@color/colorPrimary"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:tag="Profile"
            app:srcCompat="@drawable/profile" />

        <com.ben.selfadvocacy.EnhancedImageButton
            android:id="@+id/padding3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:visibility="invisible" />

        <com.ben.selfadvocacy.EnhancedImageButton
            android:id="@+id/Events"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="2"
            android:layout_row="2"
            android:adjustViewBounds="true"
            android:background="@color/colorPrimary"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:tag="Events"
            app:srcCompat="@drawable/events" />

    </GridLayout>

    <com.ben.selfadvocacy.EnhancedImageButton
        android:id="@+id/Admin"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:adjustViewBounds="true"
        android:background="@color/colorPrimary"
        android:scaleType="fitCenter"
        android:src="@drawable/admin_tools"
        android:tag="Administrator Tools"
        android:visibility="gone" />



</RelativeLayout>
