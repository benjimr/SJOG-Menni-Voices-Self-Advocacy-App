<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:clipToPadding="false"
    android:padding="14dp"
    tools:context="com.ben.selfadvocacy.LoginScreen">


    <com.ben.selfadvocacy.EnhancedTextView
        android:id="@+id/loginText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="false"
        android:text="Login"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="36sp"
        android:textStyle="bold" />

    <com.ben.selfadvocacy.EnhancedTextView
        android:id="@+id/passwordText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginText"
        android:layout_centerHorizontal="true"
        android:hint="Enter Password"
        android:textAlignment="center"
        android:textColor="@android:color/black" />

    <GridLayout
        android:id="@+id/GridPad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="55dp"
        android:columnCount="3"
        android:padding="14dp"
        android:rowCount="3">

        <ImageButton
            android:id="@+id/one"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_column="0"
            android:layout_margin="5dp"
            android:layout_row="0"
            android:adjustViewBounds="true"
            android:background="@color/colorPrimary"
            android:padding="7dp"
            android:scaleType="fitCenter"
            android:tag="1"
            app:srcCompat="@drawable/one" />

        <ImageButton
            android:id="@+id/two"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_column="1"
            android:layout_margin="5dp"
            android:layout_row="0"
            android:adjustViewBounds="true"
            android:background="@color/colorPrimary"
            android:padding="7dp"
            android:scaleType="fitCenter"
            android:tag="2"
            app:srcCompat="@drawable/two" />

        <ImageButton
            android:id="@+id/three"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_column="2"
            android:layout_margin="5dp"
            android:layout_row="0"
            android:adjustViewBounds="true"
            android:background="@color/colorPrimary"
            android:padding="7dp"
            android:scaleType="fitCenter"
            android:tag="3"
            app:srcCompat="@drawable/three" />


        <ImageButton
            android:id="@+id/four"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_column="0"
            android:layout_margin="5dp"
            android:layout_marginTop="20dp"
            android:layout_row="1"
            android:adjustViewBounds="true"
            android:background="@color/colorPrimary"
            android:padding="7dp"
            android:scaleType="fitCenter"
            android:tag="4"
            app:srcCompat="@drawable/four" />

        <ImageButton
            android:id="@+id/five"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_column="1"
            android:layout_margin="5dp"
            android:layout_marginTop="20dp"
            android:layout_row="1"
            android:adjustViewBounds="true"
            android:background="@color/colorPrimary"
            android:padding="7dp"
            android:scaleType="fitCenter"
            android:tag="5"
            app:srcCompat="@drawable/five" />

        <ImageButton
            android:id="@+id/six"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_column="2"
            android:layout_margin="5dp"
            android:layout_marginTop="20dp"
            android:layout_row="1"
            android:adjustViewBounds="true"
            android:background="@color/colorPrimary"
            android:padding="7dp"
            android:scaleType="fitCenter"
            android:tag="6"
            app:srcCompat="@drawable/six" />

        <ImageButton
            android:id="@+id/seven"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_column="0"
            android:layout_margin="5dp"
            android:layout_marginTop="20dp"
            android:layout_row="2"
            android:adjustViewBounds="true"
            android:background="@color/colorPrimary"
            android:padding="7dp"
            android:scaleType="fitCenter"
            android:tag="7"
            app:srcCompat="@drawable/seven" />

        <ImageButton
            android:id="@+id/eight"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_column="1"
            android:layout_margin="5dp"
            android:layout_marginTop="20dp"
            android:layout_row="2"
            android:adjustViewBounds="true"
            android:background="@color/colorPrimary"
            android:padding="7dp"
            android:scaleType="fitCenter"
            android:tag="8"
            app:srcCompat="@drawable/eight" />

        <ImageButton
            android:id="@+id/nine"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_column="2"
            android:layout_margin="5dp"
            android:layout_marginTop="20dp"
            android:layout_row="2"
            android:adjustViewBounds="true"
            android:background="@color/colorPrimary"
            android:padding="7dp"
            android:scaleType="fitCenter"
            android:tag="9"
            app:srcCompat="@drawable/nine" />

    </GridLayout>

    <com.ben.selfadvocacy.EnhancedImageButton
        android:id="@+id/delete"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/GridPad"
        android:layout_alignEnd="@+id/GridPad"
        android:layout_alignRight="@+id/GridPad"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/left_arrow"
        android:tag="Delete" />

</RelativeLayout>
